# k8pk configuration file
# Place this at ~/.kube/k8pk.yaml
#
# Similar to kubie's config format: https://github.com/sbstp/kubie

# Configure where to look for kubernetes config files
configs:
  # Include these glob patterns (kubie-style)
  # Supports ~ expansion and glob patterns
  include:
    - ~/.kube/config
    - ~/.kube/*.yml
    - ~/.kube/*.yaml
    - ~/.kube/configs/*.yml
    - ~/.kube/configs/*.yaml
    - ~/.kube/kubie/*.yml
    - ~/.kube/kubie/*.yaml
    # Add your custom directories
    # - ~/projects/k8s-configs/*.yaml
    # - ~/.config/kubeconfigs/*.yaml

  # Exclude these glob patterns
  # Note: k8pk's own config file is always excluded
  exclude:
    - ~/.kube/k8pk.yaml

# Hooks to run when contexts start/stop
# Useful for terminal title updates, notifications, etc.
hooks:
  # Run when entering a context (after spawn/pick)
  # OSC sequence for window title (works with Ghostty, kitty, iTerm2, etc.)
  start_ctx: 'echo -en "\033]1;âŽˆ $(k8pk info ctx --display)${K8PK_NAMESPACE:+:$K8PK_NAMESPACE}\007"'
  # Run when exiting a context shell
  stop_ctx: 'echo -en "\033]1;$SHELL\007"'
  
  # Ghostty-specific: Update window title with context info
  # Ghostty supports OSC sequences for window titles (OSC 1)
  # The above start_ctx hook works automatically with Ghostty

# Context aliases (short names for long context names)
# Use short names in commands: k8pk ctx prod
aliases:
  # prod: "arn:aws:eks:us-east-1:123456:cluster/production"
  # dev: "dev-cluster"
  # staging: "arn:aws:eks:us-west-2:123456:cluster/staging"
